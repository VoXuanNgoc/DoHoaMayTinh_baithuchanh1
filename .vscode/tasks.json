{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build: g++ (MinGW64)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/src/main.cpp",
                "-o",
                "${workspaceFolder}/bin/opengl_demo.exe",
                "-I",
                "${workspaceFolder}",
                "-lglfw3",
                "-lglew32",
                "-lopengl32",
                "-lgdi32",
                "-luser32",
                "-lkernel32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always"
            },
            "problemMatcher": []
        }
    ]
}
